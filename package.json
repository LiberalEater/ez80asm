{
	"name": "ez80-asm",
	"displayName": "EZ80 Assembly",
	"description": "EZ80 Assembly syntax highlighting for Visual Studio Code",
	"repository": {
		"type": "git",
		"url": "https://github.com/LiberalEater/ez80asm.git"
	},
	"icon": "logo.png",
	"version": "1.4.2",
	"license": "SEE LICENSE IN LICENSE.txt",
	"author": "Alex Parker",
	"publisher": "Alex-Parker",
	"engines": {
		"vscode": "^1.0.0"
	},
	"activationEvents": [
		"onLanguage:ez80-asm",
		"workspaceContains:**/*.{ez80}"
	],
	"main": "./out/extension.js",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"assembly",
		"ez80"
	],
	"contributes": {
		"languages": [
			{
				"id": "ez80-asm",
				"aliases": [
					"EZ80 Assembly"
				],
				"extensions": [
					".ez80",
					".inc"
				],
				"configuration": "./ez80-asm.language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "ez80-asm",
				"scopeName": "source.ez80",
				"path": "./syntaxes/ez80-asm.tmLanguage"
			}
		],
		"configuration": [
			{
				"type": "object",
				"title": "EZ80 Assembly",
				"properties": {
					"ez80-asm.includePath": {
						"description": "Specifies folder paths to search for include files.",
						"type": [
							"array",
							"string"
						],
						"default": []
					},
					"ez80-asm.caseInsensitive": {
						"description": "Leaved checked if you would like symbols to be case-insensitive (most assemblers are case-insensitive by default)",
						"type": "boolean",
						"default": true
					}
				}
			}
		]
	}
}
